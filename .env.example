# ========================================
# ANH Smart Reporter - Configuration
# ========================================

# Application
APP_NAME="ANH Smart Reporter"
APP_VERSION="3.0.0"
DEBUG=false

# Server
HOST=0.0.0.0
PORT=9110
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://anh_user:anh_password@postgres:5432/anh_reporter
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production-use-openssl-rand-base64-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080,http://frontend:8080

# ANH FTP Configuration
ANH_FTP_HOST=ftp.anh.gov.co
ANH_FTP_PORT=21
ANH_FTP_USER=your_ftp_username
ANH_FTP_PASSWORD=your_ftp_password
ANH_UPLOAD_TIME=06:50
ANH_REPORT_GENERATION_TIME=06:00

# Telemetry
TELEMETRY_SAMPLE_INTERVAL=600
TELEMETRY_BATCH_SIZE=1000
TELEMETRY_RETENTION_DAYS=1825

# Industrial Protocols
OPCUA_ENABLED=true
OPCUA_ENDPOINT=opc.tcp://localhost:4840
OPCUA_NAMESPACE=2

MODBUS_ENABLED=true
MODBUS_HOST=localhost
MODBUS_PORT=502

MQTT_ENABLED=true
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC_PREFIX=anh/telemetry

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=anh-reporter@insaingenieria.com
ALERT_EMAILS=admin@example.com,operator@example.com

# Machine Learning
ML_ANOMALY_DETECTION=true
ML_MODEL_PATH=/app/models
ML_RETRAIN_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Data Quality
MIN_DATA_QUALITY_SCORE=95.0
MAX_MISSING_SAMPLES=10

# Rust Engine
RUST_ENGINE_ENABLED=true
RUST_ENGINE_URL=http://rust-engine:8080
